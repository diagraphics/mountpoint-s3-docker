#!/command/execlineb -P

with-contenv
importas -i BUCKET MOUNTPOINT_BUCKET
importas -i DIR MOUNTPOINT_DIR
s6-notifyoncheck -n 0 -c "mountpoint -q ${DIR}"
mount-s3 \
    --foreground \
    --force-path-style \
    --upload-checksums off \
    --cache /var/cache/mount-s3 \
    $BUCKET $DIR

    # --debug \
    # --debug-crt \