#!/command/execlineb -P

with-s3-env
importas -i BUCKET MOUNTPOINT_BUCKET_1
importas -i DIR MOUNTPOINT_DIR_1
s6-notifyoncheck -n 0 -c "mountpoint -q ${DIR}"
mount-s3 \
    --foreground \
    --force-path-style \
    --upload-checksums off \
    --cache /var/cache/mount-s3-1 \
    $BUCKET $DIR

    # --debug \
    # --debug-crt \